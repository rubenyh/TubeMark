{
  "name": "YTBooksmarks",
  "version": "0.1.0",
  "description": "Save timestamps from youtube videos",
  "permissions": ["storage", "tabs", "activeTab"],
  "host_permissions": ["https://*.youtube.com/*"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://www.youtube.com/*"],
      "js": ["contentScript.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "assets/bookmark.svg",
        "assets/open.svg",
        "assets/delete.svg",
        "assets/save.png"
      ],
      "matches": ["*://www.youtube.com/*"]
    }
  ],
  "action": {
    "default_icon": {
      "16": "assets/ext-icon.svg",
      "24": "assets/ext-icon.svg",
      "32": "assets/ext-icon.svg"
    },
    "default_title": "My YT Bookmarks",
    "default_popup": "popup.html"
  },
  "manifest_version": 3
}